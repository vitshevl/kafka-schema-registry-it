spring:
  kafka:
    bootstrap-servers: localhost:8092
    properties:
      auto.register.schemas: true
      schema.registry.url: mock://not-used
      use.latest.version: true
      specific.avro.reader: true
      avro.remove.java.properties: true

    producer:
      key-serializer: org.apache.kafka.common.serialization.StringSerializer
      value-serializer: com.example.kafka.poc.mock.CustomKafkaAvroSerializer
    consumer:
      group-id: foo_group
      auto-offset-reset: latest
      key-deserializer: org.apache.kafka.common.serialization.StringDeserializer
      value-deserializer: com.example.kafka.poc.mock.CustomKafkaAvroDeserializer


server:
  port: 8082